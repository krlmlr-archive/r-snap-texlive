  \setcounter{pagesLTS.pnc.0}{1}%
  \papermas@log{#1}%
  \addtocounter{pagesLTS.pnc.0}{-#2}%
  \multiply \value{pagesLTS.pnc.0} -1%
  \papermas@space{\arabic{pagesLTS.pnc.0}}%
  \message{*^^J}%
  \setcounter{pagesLTS.pnc.0}{\papermas@remember}%
  }

