  \ifnum \value{pagesLTS.pnc.0}>0%
    \message{}%
  \fi%
  \setcounter{pagesLTS.pnc.0}{#1}%
  \addtocounter{pagesLTS.pnc.0}{-1}%
  \ifnum \value{pagesLTS.pnc.0}>0%
    \papermas@space{\arabic{pagesLTS.pnc.0}}%
  \fi%
  }

