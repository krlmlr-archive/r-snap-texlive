\DeclareMathSymbol{\Phi}{\mathalpha}{letters}{8}
\DeclareMathSymbol{\Psi}{\mathalpha}{letters}{9}
\DeclareMathSymbol{\Omega}{\mathalpha}{letters}{10}
%    \end{macrocode}
